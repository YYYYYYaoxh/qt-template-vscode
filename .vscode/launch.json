{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/${workspaceFolderBasename}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        { "name": "PATH", "value": "/usr/bin:/bin" },
        { "name": "LD_LIBRARY_PATH", "value": "" },
        { "name": "CONDA_PREFIX", "value": "" },
        { "name": "CONDA_DEFAULT_ENV", "value": "" }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "cmake: build (Debug)",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
