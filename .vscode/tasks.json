{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake: configure (Debug)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cmake --preset qt6-debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "cmake: build (Debug)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cmake --build --preset qt6-debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "dependsOn": ["cmake: configure (Debug)"]
    },
    {
      "label": "build+run: app (Debug)",
      "dependsOrder": "sequence",
      "dependsOn": ["cmake: build (Debug)", "run: app"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run: app",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "./build/bin/${workspaceFolderBasename}"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "dependsOn": ["cmake: build (Debug)"]
    },

    {
      "label": "cmake: configure (Release)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cmake --preset qt6-release"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "cmake: build (Release)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cmake --build --preset qt6-release"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "problemMatcher": ["$gcc"],
      "dependsOn": ["cmake: configure (Release)"],
      "group": "build"
    },
    {
      "label": "run: app (Release)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "./build-release/bin/${workspaceFolderBasename}"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "dependsOn": ["cmake: build (Release)"]
    },

    {
      "label": "clean: Debug (rm -rf build)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "rm -rf build"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "group": "build"
    },
    {
      "label": "clean: Release (rm -rf build-release)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "rm -rf build-release"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "group": "build"
    }
  ]
}
